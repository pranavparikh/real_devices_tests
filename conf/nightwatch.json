{
  "src_folders": [
    "./tests"
  ],
  "output_folder": "reports",
  "custom_commands_path": [
    "./node_modules/testarmada-nightwatch-extra/lib/commands",
    "./node_modules/testarmada-nightwatch-extra/lib/commands/mobile"
  ],
  "custom_assertions_path": [
    "./node_modules/testarmada-nightwatch-extra/lib/assertions",
    "./node_modules/testarmada-nightwatch-extra/lib/assertions/mobile"
  ],
  "page_objects_path": [
    "./lib/pages"
  ],
  "globals_path": "./lib/globals.js",
  "selenium": {
    "start_process": true,
    "server_path": "./node_modules/selenium-server/lib/runner/selenium-server-standalone-2.53.0.jar",
    "log_path": "reports",
    "host": "127.0.0.1",
    "port": 4723,
    "cli_args": {
      "webdriver.chrome.driver": "./node_modules/chromedriver/lib/chromedriver/chromedriver",
      "webdriver.ie.driver": ""
    }
  },
  "test_settings": {
    "default": {
      "launch_url": "http://127.0.0.1",
      "selenium_port": 4723,
      "selenium_host": "localhost",
      "silent": true,
      "sync_test_names": true,
      "screenshots": {
        "enabled": false,
        "path": ""
      },
      "globals": {
        "waitForConditionTimeout": 90000,
        "asyncHookTimeout": 90000,
        "syncModeBrowserList": [
          "safari:10",
          "iphone",
          "ipad"
        ]
      }
    },
    "phantomjs": {
      "desiredCapabilities": {
        "browserName": "phantomjs",
        "javascriptEnabled": true,
        "acceptSslCerts": true,
        "phantomjs.binary.path": "./node_modules/phantomjs/bin/phantomjs"
      }
    },
    "safari": {
      "desiredCapabilities": {
        "browserName": "safari"
      }
    },
    "firefox": {
      "desiredCapabilities": {
        "browserName": "firefox"
      }
    },
    "chrome": {
      "desiredCapabilities": {
        "browserName": "chrome"
      }
    },
    "appiummweb": {
      "desiredCapabilities": {
        "browserName": "safari",
        "appiumVersion": "1.6.4",
        "automationName": "xcuitest",
        "platformName": "iOS",
        "platformVersion": "10.2",
        "deviceName": "iPhone 7",
        "waitForAppScript": "true"
      },
      "selenium": {
        "start_process": false
      },
      "appium": {
        "start_process": true
      }
    },
    "appiumiosapp": {
      "skip_testcases_on_fail": true,
      "desiredCapabilities": {
        "app": "./app/yourapp.app",
        "appiumVersion": "1.6.5",
        "automationName": "XCUITest",
        "platformName": "iOS",
        "platformVersion": "10.3",
        "deviceName": "iPhone 7",
        "waitForAppScript": "true"
      },
      "selenium": {
        "start_process": false
      },
      "appium": {
        "start_process": true
      }
    },
    "appiumandroidapp": {
      "skip_testcases_on_fail": true,
      "desiredCapabilities": {
        "app": "./app/yourapp.apk",
        "appiumVersion": "1.6.5",
        "platformName": "Android",
        "platformVersion": "7.0",
        "deviceName": "Nexus_5X_API_24"
      },
      "selenium": {
        "start_process": false
      },
      "appium": {
        "start_process": true,
        "fullReset": true
      }
    },
    "appiumandroiddeviceapp": {
      "skip_testcases_on_fail": true,
      "desiredCapabilities": {
        "app": "./app/yourapp.apk",
        "appiumVersion": "1.6.5",
        "platformName": "Android",
        "platformVersion": "7.1",
        "deviceName": "Pixel XL",
        "udid": "<udid>"
      },
      "selenium": {
        "start_process": false
      },
      "appium": {
        "start_process": true,
        "fullReset": true
      }
    },
    "browserstack": {
      "request_timeout_options": {
        "timeout": 2000000
      },
      "selenium_host": "hub.browserstack.com",
      "selenium_port": 80,
      "selenium": {
        "start_process": false
      }
    }
  }
}